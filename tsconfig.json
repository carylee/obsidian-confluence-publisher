{
  "compilerOptions":{
     "baseUrl":".",
     "rootDir": "src",
     "outDir": "dist",
     "declarationDir": "dist",
     "declaration": true,
     "noEmit": false,
     "skipLibCheck": true,
     "inlineSourceMap": true,
     "inlineSources": true,
     "jsx": "react",
     "module": "CommonJS",
     "target": "ES2021",
     "allowJs": true,
     "moduleResolution": "node",
     "importHelpers": true,
     "isolatedModules": true,
     "strictNullChecks": false,
     "strict": false,
     "noImplicitAny": false,
     "esModuleInterop": true,
     "allowSyntheticDefaultImports": true,
     "lib": [
        "DOM",
        "ES5",
        "ES6",
        "ES7",
        "ES2021"
     ]
  },
  "include":[ "**/*.ts", "**/*.tsx" ],
  "exclude": ["node_modules", "dist/*", "**/*.test.ts", "**/jest.config.ts"]
}
